<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConvidadoActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Nome de convidado"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:textColor="@color/preto"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <EditText
        android:inputType="text"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:id="@+id/guestName"
        android:background="@color/preto"
        android:textColor="@color/branco"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo da conta"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/preto"
        android:gravity="center"
        />

    <Spinner
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:entries="@array/opcoes"
        android:id="@+id/spinner"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:foreground="@color/preto"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione um avatar"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="@color/preto"
        android:gravity="center"
        />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#52426BB5"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RadioGroup
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                >
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao1"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    />
                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcao2"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="20dp"
                    />

            </RadioGroup>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/iconeprisioneiro"
                android:layout_gravity="center"
                android:layout_marginTop="-170dp"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/iconekratos2"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>
    </ScrollView>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/botaoicone"
        android:layout_gravity="center"
        android:onClick="Home"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pressione 'x' para continuar"
        android:textSize="18dp"
        android:textColor="@color/preto"
        android:layout_gravity="center"
        android:gravity="center"
        />
</LinearLayout>